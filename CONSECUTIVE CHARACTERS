#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--)
	{
	    int s;
	    cin>>s;
	    char n[s];
	    cin>>n;
	    int count=0;
	    for(int i=0;n[i]!='\0';i++)
	    {
	        if(n[i]==n[i+1])
	        {
	            count++;
	        }
	    }
	    cout<<count<<endl;
	}
	return 0;
}
